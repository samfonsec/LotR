<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/small_dimen"
        android:id="@+id/tvDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_dimen"
        android:textAlignment="center"
        android:textColor="@color/primaryLightTextColor"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="You shall not pass!" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/small_dimen"
        android:layout_marginTop="@dimen/small_dimen"
        android:background="@color/secondaryTextColor"
        app:layout_constraintTop_toBottomOf="@id/tvDialog" />

</androidx.constraintlayout.widget.ConstraintLayout>