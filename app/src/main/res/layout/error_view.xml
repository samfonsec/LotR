<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/primaryLightColor">

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/small_dimen"
        android:gravity="center"
        android:text="@string/error_message"
        android:textColor="@color/secondaryLightColor"
        app:drawableTopCompat="@drawable/ic_sauron_64"
        app:layout_constraintBottom_toTopOf="@id/btTryAgain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btTryAgain"
        style="@style/Widget.Lotr.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dimen"
        android:text="@string/error_action"
        android:textColor="@color/secondaryLightColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvError"
        app:layout_constraintStart_toStartOf="@id/tvError"
        app:layout_constraintTop_toBottomOf="@id/tvError"
        app:strokeColor="@color/secondaryLightColor" />


</androidx.constraintlayout.widget.ConstraintLayout>